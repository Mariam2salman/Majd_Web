                                                    }
                                                </div>
                                                <div class="text-1-4 text-1-5">@job.Location</div>
                                                <a href="@Url.Action("JobDetails", new { id = job.Id  })" class="cairo-medium-trendy-pink-13px">تفاصيل</a>

