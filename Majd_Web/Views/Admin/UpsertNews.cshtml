    <link rel="stylesheet" type="text/css" href="~/css/StyleAlumniEducation.css" />
    <link rel="stylesheet" type="text/css" href="~/css/styleguide.css" />
    <link rel="stylesheet" type="text/css" href="~/css/globals.css" />
</head>

<body style="margin: 0; background: #ffffff">
    <input type="hidden"
           id="anPageName"
           name="page"
           value="u1575u1590u1575u1601u1577-u1575u1604u1578u1593u1604u1610u1605" />
    <div class="container-center-horizontal">
        <div class="u1575u1590u1575u1601u1577-u1575u1604u1578u1593u1604u1610u1605 screen">
            <div class="
">
                <div class="overlap-group2">
                </div>
                <div class="frame-1190-1 frame-1190-3">
                    <div class="frame-1190-2 ">
                        <div class="text-36">الأخبار</div>
                    </div>
                    <div class="frame-1195">
                        <div class="frame-119">
                            <div class="text-5 cairo-bold-smalt-blue-14px">
                                اضافة الأخبار
                            </div>
                        </div>
                        <div class="frame-119">
                            <p class="text-6 cairo-normal-star-dust-13px">
                                عند إضافتك للأخبار سيمكن مستخدوا المنصة من معرفة كل ما هو جديد
                            </p>
                        </div>
                    </div>
                    <div>
                        <br />
                        <form asp-action="UpsertNews" asp-controller="Admin" method="post">
                            <input asp-for="PostContent" class="form-control text-6 cairo-normal-sonic-silver-10px" style="margin-bottom:15px" placeholder="إضافة خبر جديد" />
                            <div class="frame-1212" style="justify-content:end">
                                <div>
                                    <button id="update-profile-button" class="button text-3 text-1" type="submit">نــشر</button>
                                </div>
                            </div>
                        </form>

                        <br />
                    </div>
                    @if (ViewBag.news != null)
                    {
                        foreach (var news in ViewBag.news)
                        {
                            <div class=" frame-1190-2 frame-1190-3">

                                <input type="text" class="text-4 valign-text-middle text-6 cairo-normal-star-dust-13px" style="border: none;" value="@news.PostContent" readonly />
                                <form asp-action="DeleteNews" asp-controller="Admin" asp-route-id="@news.Id" method="post">
                                    <input type="submit" value="حذف" class="cairo-normal-sonic-silver-10px" />
                                </form>
                            </div>
                            <br />
                        }
                    }
                    else
                    {
                        <div>لا يوجد أخبار</div>
                    }
                </div>

            </div>
        </div>
    </div>
</body>

@section Scripts {
